@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Vidly.Models.Movie;

<div>
        <h2>@Model.Name </h2>
        <ul>
            <li>Genre : @Model.Genre.Name </li>
        <li>Release Date : @Model.ReleaseDate.ToString("dddd MMMM d yyyy"); </li>
        <li>Date Added : @Model.DateAdded.ToString("dddd MMMM d yyyy"); </li>
            <li>Number of Stocks : @Model.NumberOfStocks </li>

        </ul>
    
</div>
